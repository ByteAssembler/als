---
import Layout from "../../layouts/Layout.astro";
import { fetchDataFromServer } from "../../pages/api/trpc/serverHelpers";

const links = await fetchDataFromServer("link.findAll");
---

<Layout title="Links" defaultPadding={false}>
    <main class="min-h-screen bg-blue-200 pt-0 pb-16 px-6 sm:px-12">
        <div class="mx-auto max-w-4xl">
            <header class="mb-12 text-center">
                <h1 class="text-5xl font-extrabold text-blue-900 drop-shadow-md">Ressourcen & Unterstützung bei ALS</h1>
                <p class="mt-4 text-lg text-blue-700 max-w-2xl mx-auto">
                    Nützliche Links für Betroffene, Angehörige und Interessierte.
                </p>
            </header>

            <ul class="space-y-8">
                {
                    links.map((link, index) => (
                        <li
                            key={link.id}
                            class="rounded-xl bg-white p-6 shadow-lg hover:shadow-xl transition-shadow duration-300 cursor-pointer"
                        >
                            <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="flex items-center space-x-4 text-blue-800 hover:text-blue-900 font-semibold text-xl"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-6 w-6 flex-shrink-0 text-blue-500"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    stroke-width={4}
                                >
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                                <span>{link.name}</span>
                            </a>
                            {index === 0 && (
                                <p class="mt-2 text-blue-700">
                                    Diese Webseite bietet umfassende Informationen über ALS, Symptome und
                                    Behandlungsmöglichkeiten.
                                </p>
                            )}
                            {index === 1 && (
                                <p class="mt-2 text-blue-700">
                                    Unterstützungsnetzwerke und Beratungsangebote für Betroffene und Angehörige.
                                </p>
                            )}
                        </li>
                    ))
                }
            </ul>
        </div>
    </main>
</Layout>
