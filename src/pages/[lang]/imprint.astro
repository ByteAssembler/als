---
import Layout from "@/layouts/Layout.astro";
---

<Layout showTitle={false} title="Impressum">
    <main class="max-w-4xl mx-auto py-16 px-6 sm:px-8 lg:px-12 mt-16">
        <div class="bg-white rounded-lg shadow-lg p-8 lg:p-12">
            <h1 class="text-4xl lg:text-5xl font-bold mb-8 text-gray-900 text-center">Impressum</h1>

            <div class="text-center mb-12">
                <p class="text-xl font-semibold text-gray-700">Kontaktieren Sie uns</p>
            </div>

            <div class="space-y-8 max-w-2xl mx-auto">
                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">📍</span>
                        <strong class="font-bold text-gray-800">Adresse:</strong>
                    </p>
                    <p class="text-gray-600 leading-relaxed ml-10">
                        Rienzstr. 21,<br />
                        39030 Olang, Südtirol – Italien
                    </p>
                </div>

                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">✉️</span>
                        <strong class="font-bold text-gray-800">PEC:</strong>
                    </p>
                    <p class="ml-10">
                        <a href="mailto:cv-als@pec.it" class="text-blue-600 hover:text-blue-800 hover:underline text-lg"
                            >cv-als@pec.it</a
                        >
                    </p>
                </div>

                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">📧</span>
                        <strong class="font-bold text-gray-800">Alternative E-Mail:</strong>
                    </p>
                    <p class="ml-10">
                        <a
                            href="mailto:gerdsteger@hotmail.com"
                            class="text-blue-600 hover:text-blue-800 hover:underline text-lg">gerdsteger@hotmail.com</a
                        >
                    </p>
                </div>

                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">📱</span>
                        <strong class="font-bold text-gray-800">Mobil:</strong>
                    </p>
                    <p class="ml-10">
                        <a href="tel:+393284534583" class="text-blue-600 hover:text-blue-800 hover:underline text-lg"
                            >+39 328 45 345 83</a
                        >
                    </p>
                </div>

                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">💳</span>
                        <strong class="font-bold text-gray-800">IBAN für Spende:</strong>
                    </p>
                    <p class="ml-10">
                        <span
                            class="text-gray-600 font-mono text-lg select-all cursor-pointer hover:bg-gray-100 px-2 py-1 rounded"
                            >IT59 Z060 4559 0400 0000 5001 502</span
                        >
                    </p>
                </div>

                <div class="border-l-4 border-blue-500 pl-6 py-4">
                    <p class="text-lg mb-3">
                        <span class="text-2xl mr-3">🧾</span>
                        <strong class="font-bold text-gray-800">Steuernummer:</strong>
                    </p>
                    <p class="ml-10">
                        <span
                            class="text-gray-600 font-mono text-lg select-all cursor-pointer hover:bg-gray-100 px-2 py-1 rounded"
                            >92073470210</span
                        >
                    </p>
                </div>
            </div>
        </div>
    </main>
</Layout>
