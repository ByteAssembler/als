---
import Header from "../../../components/Header.astro";
import Layout from "../../../layouts/Layout.astro";
import db from "../../../utils/db";

const { lang } = Astro.params;

const books = await db.book.findMany({
	where: { language: lang },
	select: {
		id: true,
		author: true,
		title: true,
		covers: {
			take: 1,
		},
	},
});
---

<Layout title="Bücher" defaultPadding={true}>
	<Header />
	<div class="container mx-auto px-4 py-6">
		<h1 class="mb-6 text-3xl font-bold">Bücher Übersicht</h1>
		<div class="grid grid-cols-1 gap-6 md:grid-cols-3">
			{
				books.map((book) => (
					<a
						href={"/" + (lang || "en") + `/books/book/${book.id}`}
						class="block rounded-lg bg-white p-4 shadow hover:shadow-lg"
					>
						<img
							src={
								"/media/books/" +
								(book.covers[0]?.path ||
									"/book-cover-placeholder.png")
							}
							class="h-48 w-full rounded object-cover"
						/>
						<h2 class="mt-4 text-xl font-semibold">{book.title}</h2>
						<p class="text-gray-600">{book.author}</p>
					</a>
				))
			}
		</div>
	</div>
</Layout>
