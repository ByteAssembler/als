---
import Layout from "../../layouts/Layout.astro";
import db from "../../utils/db";

const posts = await db.post.findMany({
	select: {
		id: true,
		title: true,
		slug: true,
		content: true,
		language: true,
		publishedAt: true,
		updatedAt: true,
	},
});
---

<Layout title="Blogs">
	<section class="mt-20 px-6 py-16 pt-20">
		<div class="mx-auto max-w-6xl">
			<h2 class="mb-12 text-center text-4xl font-bold text-gray-900">
				Blog Verwaltung
			</h2>
			<button
				onclick="window.location.href='/admin/blog/new'"
				class="mb-6 rounded-md bg-green-600 px-4 py-2 text-white"
			>
				Neuen Blog hinzufügen
			</button>
			<div class="grid gap-8 md:grid-cols-2">
				{
					posts.map((post) => (
						<div class="block h-full">
							<a
								href={`/admin/blog/${post.slug}`}
								class="block h-full"
							>
								<div class="flex h-full flex-col overflow-hidden rounded-lg border border-gray-200 bg-white shadow-lg transition-transform hover:scale-105">
									<div class="flex flex-1 flex-col p-6">
										<h3 class="mb-2 text-xl font-semibold text-gray-900">
											{post.title}
										</h3>
										<p class="text-gray-700">
											{post.language.toUpperCase()}
										</p>
										<p class="text-sm text-gray-500">
											Veröffentlicht:{" "}
											{new Date(
												post.publishedAt,
											).toLocaleDateString()}
										</p>
										<p class="text-sm text-gray-500">
											{post.updatedAt &&
												`Aktualisiert: ${new Date(post.updatedAt).toLocaleDateString()}`}
										</p>
									</div>
								</div>
								<button
									onclick="fetch('/admin/blog/'+post.slug+'/delete', { method: 'POST' }).then(() => location.reload())"
									class="mt-2 rounded-md bg-red-600 px-4 py-2 text-white"
								>
									Löschen
								</button>
							</a>
						</div>
					))
				}
			</div>
		</div>
	</section>

