---
import { hash } from "bcrypt";
import Layout from "../../layouts/Layout.astro";
import prisma from "../../utils/db";
import { i18n } from "../i18n";

if (
    (await prisma.user.findUnique({
        where: {
            email: "gerdsteger@hotmail.com",
        },
    })) == null
) {
    await prisma.user.create({
        data: {
            email: "gerdsteger@hotmail.com",
            passwordHash: await hash("admin1234", 10),
            role: "SUPERADMIN",
            name: "Gerd Steger",
        },
    });
}
---

<Layout title="Admin Login">
    <div class="flex justify-center items-center h-full">
        <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md h-full">
            <form method="POST" class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-2"> E-Mail </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="admin@example.com"
                    />
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-2"> Passwort </label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="••••••••"
                    />
                </div>

                <button
                    type="submit"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200"
                >
                    Anmelden
                </button>
            </form>
        </div>
    </div>
</Layout>

<script is:inline defer>
    function setupAdminLogin() {
        const form = document.querySelector("form");
        form.addEventListener("submit", async (event) => {
            event.preventDefault();
            const email = form.email.value;
            const password = form.password.value;

            try {
                const response = await fetch("/api/login", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ email, password }),
                });

                if (response.ok) {
                    window.location.href = "/admin";
                } else {
                    alert("Anmeldung fehlgeschlagen. Bitte überprüfen Sie Ihre Anmeldedaten.");
                }
            } catch (error) {
                console.error("Login failed:", error);
                alert("Anmeldung fehlgeschlagen. Bitte überprüfen Sie Ihre Anmeldedaten.");
            }
        });
    }

    setupAdminLogin();
</script>
