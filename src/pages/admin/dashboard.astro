---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Admin Panel" defaultPadding={true}>
    <div class="mx-auto mt-20 max-w-6xl rounded-lg bg-gray-50 p-6 shadow-lg">
        <header class="mb-6 flex items-center justify-between">
            <a href="/" class="text-blue-600 hover:underline">Back to Home</a>
        </header>
        <section class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
            <a
                href="/admin/links"
                class="block transform rounded-xl bg-white p-6 shadow-md transition hover:-translate-y-1 hover:shadow-lg"
            >
                <h2 class="text-xl font-semibold text-gray-800">Manage Header</h2>
                <p class="mt-2 text-gray-600">Create, edit, and delete header links.</p>
            </a>
            <a
                href="/admin/blogs"
                class="block transform rounded-xl bg-white p-6 shadow-md transition hover:-translate-y-1 hover:shadow-lg"
            >
                <h2 class="text-xl font-semibold text-gray-800">Manage Blogs</h2>
                <p class="mt-2 text-gray-600">Create, edit, and delete blog posts.</p>
            </a>
            <!-- Events-Management wurde entfernt -->
            <a
                href="/admin/media"
                class="block transform rounded-xl bg-white p-6 shadow-md transition hover:-translate-y-1 hover:shadow-lg"
            >
                <h2 class="text-xl font-semibold text-gray-800">Manage Media</h2>
                <p class="mt-2 text-gray-600">Upload and organize media files.</p>
            </a>
            <a
                href="/admin/links"
                class="block transform rounded-xl bg-white p-6 shadow-md transition hover:-translate-y-1 hover:shadow-lg"
            >
                <h2 class="text-xl font-semibold text-gray-800">Manage Links</h2>
                <p class="mt-2 text-gray-600">Create, edit, and delete links from Links page.</p>
            </a>
        </section>
    </div>
</Layout>
