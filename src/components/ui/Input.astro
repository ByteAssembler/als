---
interface Props {
	type?: "text" | "email" | "textarea";
	id: string;
	label: string;
	placeholder?: string;
	rows?: number;
}

const { type = "text", id, label, placeholder, rows = 4 } = Astro.props;
---

<div>
	<label for={id} class="mb-2 block text-gray-700">{label}</label>
	{
		type === "textarea" ? (
			<textarea
				id={id}
				rows={rows}
				placeholder={placeholder}
				class="w-full rounded-md border p-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"
			/>
		) : (
			<input
				type={type}
				id={id}
				placeholder={placeholder}
				class="w-full rounded-md border p-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-500"
			/>
		)
	}
</div>
