---
const { title, className } = Astro.props;
// no-scrollbar
---

<div
	class:list={[
		"border-grid h-full min-w-48 max-w-80 select-none overflow-auto border-r p-1.5",
		className,
	]}
	style="flex: 1;"
>
	<div class="flex flex-col gap-1">
		<h2 class="rounded-md px-2 py-1 text-sm font-semibold">{title}</h2>
		<ul class="grid grid-flow-row auto-rows-max gap-0.5 text-sm">
			<slot />
		</ul>
	</div>
</div>
