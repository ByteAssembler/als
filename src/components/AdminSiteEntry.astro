---
const {selected, id, href, dataSiteId, dataSectionId, dataLangCode} = Astro.props;
---

<li
    class="w-full overflow-hidden flex flex-col"
>
    <a
        id={id}
        href={href}
        data-selected={selected}
        data-site-id={dataSiteId}
        data-section-id={dataSectionId}
        data-lang-code={dataLangCode}
        class:list={[
            !selected && "group flex h-8 w-full items-center rounded-lg px-2 font-normal text-foreground underline-offset-2 hover:bg-accent hover:text-accent-foreground",
            selected && "group flex h-8 w-full items-center rounded-lg px-2 underline-offset-2 hover:bg-accent hover:text-accent-foreground bg-accent font-medium text-accent-foreground"
        ]}
    >
        <span>
            <slot />
        </span>
        <button
            class="ml-auto"
            aria-label="Delete"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2"><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg>
        </button>
    </a>
</li>