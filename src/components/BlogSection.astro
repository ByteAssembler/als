---
const blogs = [
	{
		title: "ALS Research Breakthrough",
		description:
			"Discover the latest developments in ALS research and how they impact future treatments.",
		image: "/placeholder.webp",
	},
	{
		title: "Community Event",
		description:
			"Join our upcoming awareness and support event in your local community.",
		image: "/placeholder.webp",
	},
	{
		title: "New Treatment Guidelines",
		description:
			"Learn about the new treatment protocols and medical advances.",
		image: "/placeholder.webp",
	},
];
---

<section class="py-16 px-6">
	<div class="max-w-6xl mx-auto">
		<h2 class="text-4xl font-bold mb-12 text-center text-gray-900">
			Blogs and Research
		</h2>
		<div class="grid md:grid-cols-3 gap-8">
			{
				blogs.map((blog) => (
					<div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200">
						<img
							src={blog.image}
							alt=""
							class="w-full h-48 object-cover"
						/>
						<div class="p-6">
							<h3 class="text-xl font-semibold mb-2 text-gray-900">
								{blog.title}
							</h3>
							<p class="text-gray-700">{blog.description}</p>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
