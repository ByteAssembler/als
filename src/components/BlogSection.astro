---
const blogs = [
	{
		title: "ALS Research Breakthrough",
		description:
			"Discover the latest developments in ALS research and how they impact future treatments.",
		image: "/placeholder.webp",
	},
	{
		title: "Community Event",
		description:
			"Join our upcoming awareness and support event in your local community.",
		image: "/placeholder.webp",
	},
	{
		title: "New Treatment Guidelines",
		description:
			"Learn about the new treatment protocols and medical advances.",
		image: "/placeholder.webp",
	},
];
---

<section class="px-6 py-16">
	<div class="mx-auto max-w-6xl">
		<h2 class="mb-12 text-center text-4xl font-bold text-gray-900">
			Blogs and Research
		</h2>
		<div class="grid gap-8 md:grid-cols-3">
			{
				blogs.map((blog) => (
					<div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-lg">
						<img
							src={blog.image}
							alt=""
							class="h-48 w-full object-cover"
						/>
						<div class="p-6">
							<h3 class="mb-2 text-xl font-semibold text-gray-900">
								{blog.title}
							</h3>
							<p class="text-gray-700">{blog.description}</p>
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
