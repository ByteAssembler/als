---
import Button from "./ui/Button.astro";
import Input from "./ui/Input.astro";
import SocialLinks from "./social/SocialLinks.astro";
---

<footer class="bg-gray-900 text-white py-12 px-6">
	<div class="max-w-6xl mx-auto">
		<div class="grid md:grid-cols-2 gap-12 mb-12">
			<div>
				<h3 class="text-2xl font-bold mb-4">Join the Fight</h3>
				<p class="mb-6 text-gray-100">
					Support ALS research by donating, volunteering, or attending
					our events.
				</p>
				<Button variant="secondary">
					Find About Join The Fight For Tomorrow
				</Button>
			</div>
			<div>
				<h4 class="text-xl mb-4">Subscribe to our newsletter</h4>
				<div class="flex flex-col sm:flex-row gap-4">
					<input
						type="email"
						placeholder="Enter your email"
						class="flex-1 p-3 rounded-md text-gray-900 border-2 border-gray-700 focus:border-primary-500 focus:ring-2 focus:ring-primary-500"
					/>
					<Button>Subscribe</Button>
				</div>
			</div>
		</div>

		<div
			class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center gap-4"
		>
			<div class="text-sm text-gray-400">
				Â© 2025 CV ALS. All rights reserved.
			</div>
			<SocialLinks />
		</div>
	</div>
</footer>
