---
interface Props {
    date: Date;
}

const { date } = Astro.props;

const lang = Astro.locals.lang || "en";
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString(lang, {
            year: "numeric",
            month: "short",
            day: "numeric",
        })
    }
</time>
