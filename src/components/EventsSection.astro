---
import Button from "./ui/Button.astro";

const events = [
	{
		title: "ALS Awareness Walk",
		date: "2024-06-15",
		location: "Central Park, NY",
		description:
			"Join us for our annual awareness walk to support ALS research.",
		image: "/placeholder.webp",
	},
	{
		title: "Research Symposium",
		date: "2024-07-20",
		location: "Virtual Event",
		description: "Learn about the latest developments in ALS research.",
		image: "/placeholder.webp",
	},
	{
		title: "Fundraising Gala",
		date: "2024-08-10",
		location: "Grand Hotel, Boston",
		description: "An evening of hope and support for the ALS community.",
		image: "/placeholder.webp",
	},
];
---

<section id="events" class="bg-gray-50 px-6 py-16">
	<div class="mx-auto max-w-6xl">
		<h2 class="mb-12 text-center text-3xl font-bold">Events</h2>
		<div class="grid gap-8 md:grid-cols-3">
			{
				events.map((event) => (
					<div class="overflow-hidden rounded-lg bg-white shadow-md">
						<img
							src={event.image}
							alt=""
							class="h-48 w-full object-cover"
						/>
						<div class="p-6">
							<h3 class="mb-2 text-xl font-semibold">
								{event.title}
							</h3>
							<div class="mb-2 text-sm text-gray-500">
								<p>
									{new Date(event.date).toLocaleDateString()}
								</p>
								<p>{event.location}</p>
							</div>
							<p class="mb-4 text-gray-600">
								{event.description}
							</p>
							{/* <Button fullWidth>Register Now</Button> */}
						</div>
					</div>
				))
			}
		</div>
	</div>
</section>
